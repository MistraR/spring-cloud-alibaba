<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sample.mall.order.mapper.OrderItemMapper">

    <resultMap id="BaseResultMap" type="com.sample.mall.order.model.OrderItemDO">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="order_no" jdbcType="BIGINT" property="orderNo"/>
        <result column="goods_id" jdbcType="BIGINT" property="goodsId"/>
        <result column="number" jdbcType="INTEGER" property="number"/>
        <result column="amount" jdbcType="DECIMAL" property="amount"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <insert id="insertOrderItems" parameterType="java.util.List">
        insert into `mall-order`.t_order_item
        (
            order_no,
            goods_id,
            number,
            amount
        )
        values
        <foreach collection="list" item="item">
        (
            #{item.orderNo},
            #{item.goodsId},
            #{item.number},
            #{item.amount}
        )
        </foreach>
    </insert>

</mapper>
